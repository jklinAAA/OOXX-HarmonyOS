<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 基础渐变背景 -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/background_color_dark"
                android:centerColor="@color/background_color"
                android:endColor="@color/background_color_light"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- 科技风格网格背景 -->
    <item>
        <bitmap
            android:src="@drawable/tech_grid"
            android:tileMode="repeat"
            android:dither="true"
            android:antialias="true"
            android:alpha="0.1" />
    </item>
    
    <!-- 科技光晕效果 -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_color"
                android:endColor="@android:color/transparent"
                android:angle="0"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.2"
                android:gradientRadius="300dp"
                android:alpha="0.1" />
        </shape>
    </item>
</layer-list>