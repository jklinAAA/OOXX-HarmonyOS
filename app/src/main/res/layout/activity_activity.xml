<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivityA 实验演示"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_to_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到 ActivityB 并传值"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定 Service"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_unbind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解绑 Service"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_send_to_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送消息到 Service"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_service_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service 消息显示区"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>