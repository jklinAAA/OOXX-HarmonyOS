<resources>
    <!-- 基本应用主题 -->
    <style name="Theme_HelloWorld" parent="Theme.AppCompat.DayNight">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        
        <!-- 应用栏样式 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- 按钮样式 -->
        <item name="android:buttonStyle">@style/TechButtonStyle</item>
    </style>

    <!-- 深色主题 -->
    <style name="Theme_HelloWorld_Dark" parent="Theme_HelloWorld">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary_color_dark_theme</item>
        <item name="colorPrimaryDark">@color/primary_color_dark_dark_theme</item>
        <item name="colorAccent">@color/accent_color_dark_theme</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background_color_dark_theme</item>
        <item name="android:colorBackground">@color/background_color_dark_theme</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_color_dark_theme</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_dark_theme</item>
    </style>

    <!-- 霓虹主题 -->
    <style name="Theme_HelloWorld_Neon" parent="Theme_HelloWorld">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary_color_neon_theme</item>
        <item name="colorPrimaryDark">@color/primary_color_dark_neon_theme</item>
        <item name="colorAccent">@color/accent_color_neon_theme</item>
        
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background_color_neon_theme</item>
        <item name="android:colorBackground">@color/background_color_neon_theme</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_color_neon_theme</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_neon_theme</item>
    </style>

    <!-- 科技风格按钮样式 -->
    <style name="TechButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/tech_button_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:allCaps">false</item>
    </style>

    <!-- 科技风格次要按钮样式 -->
    <style name="TechSecondaryButtonStyle" parent="TechButtonStyle">
        <item name="android:background">@drawable/tech_button_secondary</item>
    </style>

    <!-- 科技风格小按钮样式 -->
    <style name="TechSmallButtonStyle" parent="TechButtonStyle">
        <item name="android:background">@drawable/tech_button_small</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- 游戏操作按钮样式 -->
    <style name="GameActionButtonStyle" parent="TechButtonStyle">
        <item name="android:background">@drawable/action_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- 游戏主要操作按钮样式 -->
    <style name="GameActionPrimaryButtonStyle" parent="GameActionButtonStyle">
        <item name="android:background">@drawable/action_button_primary</item>
    </style>
</resources>